<h1>Listing complaints</h1>

<table>
  <thead>
    <tr>
    t.integer  "user_id"
    t.integer  "typegroup_id"
    t.integer  "type_id"
    t.string   "photo"
    t.string   "comment"
      <th>id</th>
      <th>User</th>
      <th>TypeGroup</th>
      <th>Type</th>
      <th>Photo</th>
      <th>Comment</th>
    </tr>
  </thead>

  <tbody>
    <% @complaints.each do |complaint| %>
      <tr>
        <td><%= complaint.id %></td>
        <td><%= complaint.user.id %></td>
        <td><%= complaint.typegroup.name %></td>
        <td><%= complaint.type.name %></td>
        <td><%= complaint.photo %></td>
        <td><%= complaint.comment %></td>
        <td><%= link_to 'Show', complaint %></td>
        <td><%= link_to 'Edit', edit_complaint_path(complaint) %></td>
        <td><%= link_to 'Destroy', complaint, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

